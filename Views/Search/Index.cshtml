@model RailwayNew1.Models.ViewModel.Search.IndexViewModel;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Расписание движения поездов</h2>
<form asp-controller="Search" asp-action="Index" asp-antiforgery="true">
    <div>
        <div class="form-group">
            <label asp-for="From" class="control-label">Откуда</label>
            <input asp-for="From" class="form-control" />
            <span asp-validation-for="From" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="To" class="control-label">Куда</label>
            <input asp-for="To" class="form-control" />
            <span asp-validation-for="To" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label">Дата</label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Поиск" class="btn" />
        </div>

    </div>
</form>


