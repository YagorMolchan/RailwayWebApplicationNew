@model RailwayNew1.Models.ViewModel.Account.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Забыли пароль";
}

<h2>@ViewData["Title"]</h2>
<form asp-controller="Account" asp-action="ForgotPassword" asp-antiforgery="true">
    <div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Электронный адрес</label><br />
                <input asp-for="Email" name="Email" /><br />
                <span asp-validation-for="Email" />
            </div>
        </div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <input type="submit" value="Восстановить пароль" />
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

